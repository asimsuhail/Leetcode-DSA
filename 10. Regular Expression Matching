class Solution:
    def isMatch(self, s: str, p: str) -> bool:
        tl, pl = len(s), len(p)
        dp = [[False] * (pl + 1) for _ in range(tl + 1)]
        dp[0][0] = True

        for i in range(tl + 1):
            for j in range(1, pl + 1):
                if p[j - 1] == "*":
                    dp[i][j] = dp[i][j - 2]
                    if i > 0 and (p[j - 2] == "." or s[i - 1] == p[j - 2]):
                        dp[i][j] |= dp[i - 1][j]

                elif i > 0 and (p[j - 1] == "." or s[i - 1] == p[j - 1]):
                    dp[i][j] = dp[i - 1][j - 1]

        return dp[tl][pl]
