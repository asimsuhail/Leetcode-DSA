// 58. Length of Last Word
// Given a string s consisting of words and spaces, return the length of the last word in the string.
class Solution {
public:
    int lengthOfLastWord(string s) {
        int wordsize = 0;
        int siz = s.size();
        while(siz--) {
            if(s[siz] != ' ') {
                wordsize++;
            } else {
                if(wordsize == 0) {
                    continue;
                } 
                break;
            }
        }
        return wordsize;
    }
};
